{
  "entrypoint": "index.html",
  "shell": "src/nylon-app.html",
  "fragments": [
    "src/pages/page-view/page-view.html",
    "src/pages/page-view2/page-view2.html",
    "src/pages/page-404/page-404.html"
  ],
  "sources": [
    "src/**/*",
    "images/**/*",
    "bower.json"
  ],
  "extraDependencies": [
    "manifest.json",
    "service-worker.js",
    "bower_components/webcomponentsjs/*.js"
    
